{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_API_TIMEOUT": "@vite_api_timeout",
    "VITE_MAX_FILE_SIZE": "@vite_max_file_size",
    "VITE_UPLOAD_URL": "@vite_upload_url",
    "VITE_APP_NAME": "@vite_app_name",
    "VITE_APP_DESCRIPTION": "@vite_app_description",
    "VITE_ENABLE_MESSAGING": "@vite_enable_messaging",
    "VITE_ENABLE_MOBILE_MONEY": "@vite_enable_mobile_money"
  }
}
